<%= javascript_include_tag "tm_tables.js", :plugin => "redmine_tablemanager" %>
<%= stylesheet_link_tag 'tm_tables', :plugin => 'redmine_tablemanager' %>

<h1>Listing <%= t('activerecord.models.tm_table') %></h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.tm_table.table_name') %></th>
      <th><%= t('activerecord.attributes.tm_table.table_name_jp') %></th>
      <th><%= t('activerecord.attributes.tm_table.revision_number') %></th>
      <th><%= t('activerecord.attributes.tm_table.note') %></th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @tm_tables.each do |tm_table| %>
      <tr>
        <td><%= tm_table.table_name %></td>
        <td><%= tm_table.table_name_jp %></td>
        <td><%= tm_table.revision_number %></td>
        <td><%= tm_table.note %></td>
        <td><%= link_to 'Show', project_tm_table_path(@project,tm_table) , class: "btn btn-xs btn-default"%>
        <%= link_to 'Edit', edit_project_tm_table_path(@project,tm_table) , class: "btn btn-xs btn-default"%>
        <%= link_to 'Destroy', [@project,tm_table], method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New '+ t('activerecord.models.tm_table'), new_project_tm_table_path(@project) , class: "btn btn-xs btn-default"%>